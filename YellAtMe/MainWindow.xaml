<Window x:Class="YellAtMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellAtMe"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Closing="RedXHit"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <tb:TaskbarIcon
            ToolTipText="hello world"
            MenuActivation="LeftOrRightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Alarm" Click="OpenWindow"/>
                    <MenuItem Header="Close" Click="CloseProgram"/>
                </ContextMenu>
                    
            </tb:TaskbarIcon.ContextMenu>

        </tb:TaskbarIcon>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="166,143,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>


    </Grid>
</Window>
